@model Information_System_MVC.Models.WorkPlace
@{
    ViewBag.Title = "Рабочие места";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Рабочие места -> Редактирование записи</h3>
