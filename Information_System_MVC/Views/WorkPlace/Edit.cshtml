    {
        <fieldset>
            <p>Код места в здании</p>
            <input id="PlaceId" name="PlaceId" value="" readonly />
            @Html.ValidationMessageFor(model => model.PlaceId)
            <p>Код здания</p>
            <input id="BuildingId" name="BuildingId" value="" readonly />
            @Html.ValidationMessageFor(model => model.BuildingId)
