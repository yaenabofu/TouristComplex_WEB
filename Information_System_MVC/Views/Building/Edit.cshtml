@model Information_System_MVC.Models.Building
@{
    ViewBag.Title = "Здания на территории";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Здания на территории -> Редактирование записи</h3>
    @using (Html.BeginForm("Edit", "Building", FormMethod.Post))
    {
        <fieldset>
            @Html.LabelFor(x => x.Id, "Код здания")
            <br /> <br />
            <input id="Id" name="Id" value="@Model.Id" readonly />
            @Html.ValidationMessageFor(model => model.Id)
            <br /> <br />
            @Html.LabelFor(x => x.RoomCount, "Количество комнат")
            <br /> <br />
            <input id="RoomCount" name="RoomCount" value="@Model.RoomCount" />
            @Html.ValidationMessageFor(model => model.RoomCount)
            <br /> <br />
            <input type="submit" value="Изменить" />
        </fieldset>
    }
</div>