@model Information_System_MVC.Models.Product
@{
    ViewBag.Title = "Товары";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Товары -> Подробная информация</h3>
    <fieldset>
        @using (Html.BeginForm("Order", "Product", FormMethod.Post))
        {
            <p>Код записи</p>
            <input id="id" name="id" value="@Model.Id" readonly />
            @Html.ValidationMessageFor(model => model.Id)

            <p>Название</p>
            <input id="Name" name="Name" value="@Model.Name" readonly />
            @Html.ValidationMessageFor(model => model.Name)

            <p>Цена</p>
            <input id="Price" name="Price" value="@Model.Price" readonly />
            @Html.ValidationMessageFor(model => model.Price)

            <p>Описание</p>
            <textarea id="Description" name="Description" readonly>@Model.Description</textarea>
            @Html.ValidationMessageFor(model => model.Description)

            <p>Вид</p>
            <input id="Type" name="Type" value="@Model.Type " readonly />
            @Html.ValidationMessageFor(model => model.Type)

            <p>Количество</p>
            <input id="Quantity" name="Quantity" value="@Model.Quantity" readonly />
            @Html.ValidationMessageFor(model => model.Quantity)
            <br /> <br />
            <p>Выберите количество</p>
            <input type="number" id="count" name="count" min="1" value="1" max="@Model.Quantity" required />
            <br /><br />
            <input id="submBtn" name="submBtn" value="" type="submit" hidden />
        }
        <input id="check" name="check" value="Заказать" type="submit" onclick="Check()" />
    </fieldset>
</div>
<script>
    function Check() {
        document.getElementById('submBtn').click();
    }
</script>
