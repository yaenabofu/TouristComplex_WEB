@model Information_System_MVC.Models.Product
@{
    ViewBag.Title = "Товары";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Товары -> Подробная информация</h3>
    @using (Html.BeginForm("Details", "Product", FormMethod.Get))
    {
        <fieldset>
            <p>Код записи</p>
            <input id="Id" name="Id" value="@Model.Id" readonly />
            @Html.ValidationMessageFor(model => model.Id)

            <input id="Name" name="Name" value="" />
            @Html.ValidationMessageFor(model => model.Name)

            <p>Цена</p>
            <input id="Price" name="Price" value="" />
            @Html.ValidationMessageFor(model => model.Price)

            <p>Описание</p>
            <textarea id="Description" name="Description"></textarea>
            @*<input id="Description" name="Description" value="" />*@
            @Html.ValidationMessageFor(model => model.Description)

            <p>Вид</p>
            <input id="Type" name="Type" value="" />
            @Html.ValidationMessageFor(model => model.Type)

            <p>Количество</p>
            <input id="Quantity" name="Quantity" value="" />
            @Html.ValidationMessageFor(model => model.Quantity)
            <br /> <br />
        </fieldset>
    }
</div>
