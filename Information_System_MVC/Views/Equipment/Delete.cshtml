@model Information_System_MVC.Models.Equipment
@{
    ViewBag.Title = "Здания на территории";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Оборудование -> Удаление записи</h3>
    <fieldset>
        <p>Код оборудования</p>

        <input id="Id" name="Id" value="@Model.Id" readonly />
        @Html.ValidationMessageFor(model => model.Id)


        <p>Название</p>

        <input id="Name" name="Name" value="@Model.Name" readonly />
        @Html.ValidationMessageFor(model => model.Name)


        <p>Количество</p>
        <input id="Quantity" name="Quantity" value="@Model.Quantity" readonly />
        @Html.ValidationMessageFor(model => model.Quantity)


        <p>Код профессии</p>
        @{
            foreach (var item in ViewBag.PassingValue)
            {
                if (item.Id == Model.ProfessionId)
                {
                    <input id="ProfessionId" name="ProfessionId" value="@item.Name [@item.Power]" readonly />
                }
            }
        }
        @Html.ValidationMessageFor(model => model.ProfessionId)
        <br /> <br />
        @using (Html.BeginForm())
        {
            <input type="submit" value="Удалить" />
        }
        <p>
            <form action="/Equipment/Index">
                <input type="submit" value="Назад" />
            </form>
        </p>
    </fieldset>
</div>